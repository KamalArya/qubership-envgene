# Flake8 configuration file
[flake8]

# Ignore specific error codes
ignore = 
    F405,   # may be undefined, or defined from star imports
    F403,   # unable to detect undefined names from star imports

# Maximum line length
max-line-length = 120

# Exclude patterns
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    test_data

# Per-file ignores
per-file-ignores = 
    # Star imports are common in __init__.py files
    __init__.py:F401,F403,F405
    # Test files may have additional flexibility
    test_*.py:F401,F403,F405
    *test*.py:F401,F403,F405
