# Super-linter v7.4.0 Configuration
# Optimized for Qubership EnvGene - focus on critical issues only

#############################################
# CRITICAL LINTERS - ALWAYS ENABLED
#############################################

# Security scanning - MUST CHECK
VALIDATE_GITLEAKS=true
GITLEAKS_CONFIG_FILE=.gitleaks.toml

# Shell scripting - critical for automation scripts  
VALIDATE_BASH=true
VALIDATE_BASH_EXEC=true
SHELLCHECK_SEVERITY=error

# YAML/JSON syntax - critical for configuration files
VALIDATE_YAML=true
VALIDATE_JSON=true

# Dockerfile - important for container builds
VALIDATE_DOCKERFILE_HADOLINT=true

#############################################
# PYTHON LINTERS - SELECTIVE ENABLING
#############################################

# Basic Python syntax only - disable heavy formatters
VALIDATE_PYTHON_PYLINT=false
VALIDATE_PYTHON_BLACK=false
VALIDATE_PYTHON_FLAKE8=false
VALIDATE_PYTHON_ISORT=false
VALIDATE_PYTHON_MYPY=false
VALIDATE_PYTHON_PYINK=false

# Enable only critical Python checks
VALIDATE_PYTHON=true

#############################################
# JAVA LINTERS - DISABLED (TOO NOISY)
#############################################

VALIDATE_JAVA=false
VALIDATE_GOOGLE_JAVA_FORMAT=false

#############################################
# STYLE/FORMAT LINTERS - DISABLED (TOO NOISY)
#############################################

# Formatting - creates too much noise
VALIDATE_EDITORCONFIG=false
VALIDATE_SHELL_SHFMT=false
VALIDATE_MARKDOWN=false
VALIDATE_NATURAL_LANGUAGE=false
VALIDATE_ENV=false

# GitHub Actions - too many shellcheck warnings
VALIDATE_GITHUB_ACTIONS=false

# JavaScript/Web (not used in this project)
VALIDATE_JAVASCRIPT_PRETTIER=false
VALIDATE_JAVASCRIPT_STANDARD=false
VALIDATE_JSON_PRETTIER=false
VALIDATE_MARKDOWN_PRETTIER=false
VALIDATE_YAML_PRETTIER=false

# Other formatters/linters that create noise
VALIDATE_JSCPD=false
VALIDATE_KUBERNETES_KUBECONFORM=false

#############################################
# GLOBAL CONFIGURATION
#############################################

# Exclude test data and samples from all linting
FILTER_REGEX_EXCLUDE=(test_data/.*|docs/samples/.*|.*test.*\.py)

# Gitleaks configuration
GITLEAKS_LOG_LEVEL=warn

# Default branch for comparison
DEFAULT_BRANCH=main

# Fail on any critical errors
DISABLE_ERRORS=false